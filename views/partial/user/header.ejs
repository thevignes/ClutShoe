    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Poppins', sans-serif;
        }

        :root {
            --primary: #00878a;
            --primary-dark: #006d6f;
            --text: #2d3436;
            --text-light: #90a4ae;
            --bg-light: #f8f9fa;
            --shadow: 0 2px 20px rgba(0,0,0,0.08);
        }

        .modern-nav {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            box-shadow: var(--shadow);
            position: fixed;
            width: 100%;
            top: 0;
            z-index: 1000;
            padding: 1rem 0;
        }

        .nav-container {
            max-width: 1400px;
            margin: 0 auto;
            padding: 0 2rem;
        }

        .nav-flex {
            display: flex;
            align-items: center;
            justify-content: space-between;
            gap: 2rem;
        }

        .brand-logo {
            font-size: 1.8rem;
            font-weight: 700;
            color: var(--primary);
            text-decoration: none;
            letter-spacing: -0.5px;
            flex-shrink: 0;
            position: relative;
            padding: 0.5rem 0;
        }

        .brand-logo::after {
            content: '';
            position: absolute;
            width: 6px;
            height: 6px;
            background: var(--primary);
            border-radius: 50%;
            bottom: 0;
            left: 50%;
            transform: translateX(-50%);
            transition: all 0.3s ease;
        }

        .brand-logo:hover::after {
            width: 100%;
            height: 3px;
            border-radius: 4px;
        }

        .nav-menu {
            display: flex;
            align-items: center;
            gap: 2.5rem;
            margin: 0;
            padding: 0;
            list-style: none;
        }

        .nav-link {
            color: var(--text);
            font-weight: 500;
            text-decoration: none;
            font-size: 0.95rem;
            padding: 0.5rem 0;
            position: relative;
            transition: all 0.3s ease;
        }

        .nav-link::before {
            content: '';
            position: absolute;
            width: 0;
            height: 2px;
            bottom: 0;
            left: 0;
            background: var(--primary);
            transition: width 0.3s ease;
        }

        .nav-link:hover {
            color: var(--primary);
        }

        .nav-link:hover::before {
            width: 100%;
        }

        .search-container {
            flex: 1;
            max-width: 400px;
            position: relative;
            margin: 0 2rem;
        }

        .search-form {
            position: relative;
            width: 100%;
            display: flex;
            align-items: center;
        }

        .search-input {
            width: 100%;
            height: 48px;
            padding: 0.9rem 1.2rem;
            padding-right: 50px;
            border: 2px solid transparent;
            border-radius: 16px;
            background: var(--bg-light);
            font-size: 0.95rem;
            color: var(--text);
            transition: all 0.3s ease;
        }

        .search-input::placeholder {
            color: var(--text-light);
            transition: color 0.3s ease;
        }

        .search-input:focus::placeholder {
            color: transparent;
        }

        .search-input:focus {
            outline: none;
            border-color: var(--primary);
            background: white;
            box-shadow: 0 0 0 4px rgba(0,135,138,0.1);
        }

        .search-btn {
            position: absolute;
            right: 6px;
            background: var(--primary);
            border: none;
            width: 36px;
            height: 36px;
            border-radius: 12px;
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            transition: all 0.3s ease;
            font-size: 0.9rem;
        }

        .search-btn:hover {
            background: var(--primary-dark);
            transform: translateY(-1px);
            box-shadow: 0 4px 12px rgba(0,135,138,0.2);
        }

        .search-btn:active {
            transform: translateY(0);
            box-shadow: none;
        }

        @keyframes pulse {
            0% { transform: scale(1); }
            50% { transform: scale(1.1); }
            100% { transform: scale(1); }
        }

        .search-form:focus-within .search-btn i {
            animation: pulse 1s ease infinite;
        }

        .action-buttons {
            display: flex;
            align-items: center;
            gap: 1rem;
        }

        .action-btn {
            width: 42px;
            height: 42px;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 12px;
            background: var(--bg-light);
            color: var(--text);
            border: none;
            cursor: pointer;
            /* transition: all 0.3s ease; */
            position: relative;
        }

        .action-btn:hover {
            /* background: var(--primary);
            color: white;
            transform: translateY(-2px); */
        }

        .action-btn::after {
            content: '';
            position: absolute;
            width: 100%;
            height: 100%;
            border-radius: 12px;
            /* background: var(--primary); */
            opacity: 0;
            /* transform: scale(0.8);
            transition: all 0.3s ease;
            z-index: -1; */
        }

        .action-btn:hover::after {
            /* opacity: 0.2;
            transform: scale(1.2); */
        }

        .auth-btn {
            padding: 0.7rem 1.4rem;
            border-radius: 12px;
            font-weight: 500;
            text-decoration: none;
            transition: all 0.3s ease;
            font-size: 0.95rem;
        }

