               <div class="pagination-wrapper">
                <div class="pagination">
                  <!-- Previous Page Link -->
                  <a href="?sort=<%= sortOption %>&page=<%= (currentPage - 1 > 0 ? currentPage - 1 : 1) %>&limit=<%= itemsPerPage %><% if (searchQuery) { %>&query=<%= searchQuery %><% } %>" 
                     <% if (currentPage === 1) { %> style="display:none;" <% } %>>
                    Previous
                  </a>
              
                  <!-- Page Number Links -->
                  <% for (let i = 1; i <= totalPages; i++) { %>
                    <a href="?sort=<%= sortOption %>&page=<%= i %>&limit=<%= itemsPerPage %><% if (searchQuery) { %>&query=<%= searchQuery %><% } %>" 
                       <% if (i === currentPage) { %> style="font-weight: bold;" <% } %>>
                      <%= i %>
                    </a>
                  <% } %>
              
                  <!-- Next Page Link -->
                  <a href="?sort=<%= sortOption %>&page=<%= (currentPage + 1 <= totalPages ? currentPage + 1 : totalPages) %>&limit=<%= itemsPerPage %><% if (searchQuery) { %>&query=<%= searchQuery %><% } %>" 
                     <% if (currentPage === totalPages) { %> style="display:none;" <% } %>>
                    Next
                  </a>
                </div>
              </div>
              
        </main>
    </div>
    

