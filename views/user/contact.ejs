<%- include('../../views/partial/user/header',{user:user}) %>

<style>
/* Modern Contact Page Styling */
.contact-section {
    background: linear-gradient(135deg, #f5f7fa, #e3e6e8);
    padding: 80px 0;
    min-height: 80vh;
}

.contact-container {
    background: rgba(255, 255, 255, 0.7);
    backdrop-filter: blur(15px) saturate(180%);
    -webkit-backdrop-filter: blur(15px) saturate(180%);
    border: 1px solid rgba(255, 255, 255, 0.3);
    box-shadow: 0 8px 32px rgba(31, 38, 135, 0.15);
    border-radius: 24px;
    padding: 40px;
    max-width: 1200px;
    margin: 0 auto;
}

.contact-header {
    text-align: center;
    margin-bottom: 50px;
}

.contact-header h1 {
    font-size: 2.5rem;
    color: #006A67;
    margin-bottom: 20px;
    font-weight: 700;
    opacity: 0;
    transform: translateY(20px);
    animation: fadeInUp 0.6s ease forwards;
}

.contact-header p {
    color: #666;
    font-size: 1.1rem;
    max-width: 600px;
    margin: 0 auto;
    opacity: 0;
    transform: translateY(20px);
    animation: fadeInUp 0.6s ease forwards 0.2s;
}

.contact-info-container {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 30px;
    margin-bottom: 50px;
}

.contact-info-item {
    background: rgba(255, 255, 255, 0.5);
    padding: 30px;
    border-radius: 16px;
    text-align: center;
    transition: all 0.3s ease;
    opacity: 0;
    transform: translateY(20px);
    animation: fadeInUp 0.6s ease forwards 0.4s;
}

.contact-info-item:hover {
    transform: translateY(-10px);
    background: rgba(255, 255, 255, 0.8);
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
}

.contact-info-item i {
    font-size: 2rem;
    color: #006A67;
    margin-bottom: 15px;
}

.contact-info-item h3 {
    color: #333;
    margin-bottom: 10px;
    font-size: 1.2rem;
}

.contact-info-item p {
    color: #666;
    font-size: 1rem;
}

.contact-form {
    background: rgba(255, 255, 255, 0.5);
    padding: 40px;
    border-radius: 20px;
    opacity: 0;
    transform: translateY(20px);
    animation: fadeInUp 0.6s ease forwards 0.6s;
}

.form-group {
    margin-bottom: 25px;
}

.form-control {
    background: rgba(255, 255, 255, 0.8);
    border: 1px solid rgba(0, 106, 103, 0.2);
    border-radius: 12px;
    padding: 15px;
    width: 100%;
    transition: all 0.3s ease;
}

.form-control:focus {
    background: white;
    border-color: #006A67;
    box-shadow: 0 0 0 3px rgba(0, 106, 103, 0.1);
    outline: none;
}

.submit-btn {
    background: linear-gradient(45deg, #006A67, #00857f);
    color: white;
    border: none;
    padding: 15px 40px;
    border-radius: 50px;
    font-weight: 600;
    letter-spacing: 1px;
    transition: all 0.3s ease;
    cursor: pointer;
    width: 100%;
}

.submit-btn:hover {
    transform: translateY(-3px);
    box-shadow: 0 10px 20px rgba(0, 106, 103, 0.2);
}

@keyframes fadeInUp {
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

/* Responsive Design */
@media (max-width: 768px) {
    .contact-info-container {
        grid-template-columns: 1fr;
    }
    
    .contact-container {
        padding: 20px;
    }
    
    .contact-header h1 {
        font-size: 2rem;
    }
}
</style>

<div class="contact-section">
    <div class="contact-container">
        <div class="contact-header">
            <h1>Get in Touch</h1>
            <p>We'd love to hear from you. Please fill out this form or shoot us an email.</p>
        </div>

        <div class="contact-info-container">
            <div class="contact-info-item">
                <i class="fi-rs-map-marker-alt"></i>
                <h3>Visit Us</h3>
                <p>123 Business Street<br>New York, NY 10001</p>
            </div>
            <div class="contact-info-item">
                <i class="fi-rs-phone-call"></i>
                <h3>Call Us</h3>
                <p>+1 234 567 8900<br>Mon-Fri, 9am-6pm</p>
            </div>
            <div class="contact-info-item">
                <i class="fi-rs-envelope"></i>
                <h3>Email Us</h3>
                <p>info@yourstore.com<br>support@yourstore.com</p>
            </div>
        </div>

        <div class="contact-form">
            <form id="contactForm" action="/submit-contact" method="POST">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <input type="text" class="form-control" placeholder="Your Name" required>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <input type="email" class="form-control" placeholder="Your Email" required>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Subject">
                </div>
                <div class="form-group">
                    <textarea class="form-control" rows="5" placeholder="Your Message" required></textarea>
                </div>
                <button type="submit" class="submit-btn">Send Message</button>
            </form>
        </div>
    </div>
</div>

<script>
// Add smooth scroll animation to form
document.querySelectorAll('a[href^="#"]').forEach(anchor => {
    anchor.addEventListener('click', function (e) {
        e.preventDefault();
        document.querySelector(this.getAttribute('href')).scrollIntoView({
            behavior: 'smooth'
        });
    });
});

// Add animation to form inputs
document.querySelectorAll('.form-control').forEach(input => {
    input.addEventListener('focus', function() {
        this.parentElement.classList.add('focused');
    });
    input.addEventListener('blur', function() {
        if (!this.value) {
            this.parentElement.classList.remove('focused');
        }
    });
});
</script>

