        const couponCode = document.getElementById('couponCode')?.value.trim();

        if (!selectedAddress || !selectedPaymentOption) {
            Toastify({
                text: "Please select both an address and a payment option",
                duration: 3000,
                close: true,
                gravity: "top",
                position: "center",
                backgroundColor: "#ff6b6b",
                stopOnFocus: true
            }).showToast();
            return;
        }

        const data = {
