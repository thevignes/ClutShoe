<script>
    function copyCoupon(couponCode) {
        navigator.clipboard.writeText(couponCode)
            .then(function() {
                Toastify({
                    text: "Coupon Code Copied!",
                    duration: 3000,
                    close: true,
                    gravity: "top",
                    position: "center",
                    backgroundColor: "#51cf66",
                    stopOnFocus: true
                }).showToast();
            })
            .catch(function(err) {
                console.error('Error copying text:', err);
                Toastify({
                    text: "Failed to copy coupon code",
                    duration: 3000,
                    close: true,
                    gravity: "top",
                    position: "center",
                    backgroundColor: "#ff6b6b",
                    stopOnFocus: true
                }).showToast();
            });
    }
</script>

