<%-include('../../views/partial/user/header',{user:user})%>
<link rel="stylesheet" href="/evara-frontend/assets/css/blender.css" />
<!-- <link rel="stylesheet" href="/public/public/evara-frontend/assets/css/zoom.css"> -->
<main class="main">
  <style>
    /* Modern Product Grid Styling */
    .product-grid-4 {
      padding: 20px 0;
    }

    .product-cart-wrap {
      background: rgba(255, 255, 255, 0.9);
      backdrop-filter: blur(10px);
      border-radius: 20px;
      padding: 15px;
      transition: all 0.4s ease;
      border: 1px solid rgba(255, 255, 255, 0.2);
      box-shadow: 0 8px 32px rgba(31, 38, 135, 0.15);
      overflow: hidden;
    }

    .product-cart-wrap:hover {
      transform: translateY(-10px);
      box-shadow: 0 15px 40px rgba(31, 38, 135, 0.2);
    }

    /* Image Container */
    .product-img-action-wrap {
      position: relative;
      overflow: hidden;
      border-radius: 15px;
    }

    .product-img {
      position: relative;
      overflow: hidden;
      border-radius: 15px;
    }

    .product-img img {
      width: 100%;
      height: 300px;
      object-fit: cover;
      transition: transform 0.6s ease;
    }

    .product-img:hover img.default-img {
      transform: scale(0);
      opacity: 0;
    }

    .product-img:hover img.hover-img {
      transform: scale(1);
      opacity: 1;
    }

    .hover-img {
      position: absolute;
      top: 0;
      left: 0;
      opacity: 0;
      transform: scale(1.2);
    }

    /* Product Badges */
    .product-badges {
      position: absolute;
      top: 15px;
      left: 15px;
      z-index: 2;
    }

    .hot {
      background: linear-gradient(45deg, #ff4757, #ff6b81);
      color: white;
      padding: 8px 15px;
      border-radius: 25px;
      font-weight: 600;
      font-size: 12px;
      box-shadow: 0 4px 15px rgba(255, 71, 87, 0.3);
      animation: pulse 2s infinite;
    }

    @keyframes pulse {
      0% {
        transform: scale(1);
      }
      50% {
        transform: scale(1.05);
      }
      100% {
        transform: scale(1);
      }
    }

    /* Product Content */
    .product-content-wrap {
      padding: 15px 10px;
    }

    .product-category {
      margin-bottom: 10px;
    }

    .product-category a {
      color: #006a67 !important;
      font-size: 14px !important;
      font-weight: 500;
      text-transform: uppercase;
      letter-spacing: 1px;
      transition: all 0.3s ease;
    }

    .product-category a:hover {
      color: #00857f !important;
    }

    .product-category h2 {
      font-size: 18px !important;
      margin: 10px 0;
      font-weight: 600;
      line-height: 1.4;
    }

    .product-category h2 a {
      color: #2d3436 !important;
      transition: all 0.3s ease;
    }

    .product-category h2 a:hover {
      color: #006a67 !important;
    }

    /* Price Styling */
    .price-container {
      display: flex;
      align-items: center;
      gap: 10px;
      margin: 15px 0;
    }

    .sale-price {
      color: #006a67 !important;
      font-size: 22px !important;
      font-weight: 700;
    }

    .regular-price {
      color: #a4b0be !important;
      font-size: 16px !important;
      text-decoration: line-through;
    }

    /* Add to Cart Button */
    .product-action-1 {
      position: absolute;
      bottom: -50px;
      left: 0;
      right: 0;
      background: rgba(255, 255, 255, 0.9);
      padding: 15px;
      transition: all 0.3s ease;
      backdrop-filter: blur(5px);
      border-top: 1px solid rgba(255, 255, 255, 0.2);
    }

    .product-cart-wrap:hover .product-action-1 {
      bottom: 0;
    }

    .action-btn {
      background: linear-gradient(45deg, #006a67, #00857f);
      color: white !important;
      width: 45px;
      height: 45px;
      border-radius: 50%;
      display: inline-flex;
      align-items: center;
      justify-content: center;
      transition: all 0.3s ease;
      box-shadow: 0 5px 15px rgba(0, 106, 103, 0.2);
    }

    .action-btn:hover {
      transform: translateY(-3px) rotate(360deg);
      box-shadow: 0 8px 20px rgba(0, 106, 103, 0.3);
    }

    .action-btn i {
      font-size: 20px;
    }

    /* Responsive Design */
    @media (max-width: 768px) {
      .product-img img {
        height: 200px;
      }

      .product-category h2 {
        font-size: 16px !important;
      }

      .sale-price {
        font-size: 18px !important;
      }
    }

    /* Enhanced Glass Effect Styling */
    .product-cart-wrap {
      background: rgba(255, 255, 255, 0.7);
      backdrop-filter: blur(15px) saturate(180%);
      -webkit-backdrop-filter: blur(15px) saturate(180%);
      border: 1px solid rgba(255, 255, 255, 0.3);
      box-shadow: 0 8px 32px rgba(31, 38, 135, 0.15),
        inset 0 0 0 1px rgba(255, 255, 255, 0.4);
      border-radius: 24px;
      padding: 20px;
      transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
      position: relative;
      overflow: hidden;
    }

    .product-cart-wrap::before {
      content: "";
      position: absolute;
      top: 0;
      left: -100%;
      width: 100%;
      height: 100%;
      background: linear-gradient(
        90deg,
        transparent,
        rgba(255, 255, 255, 0.2),
        transparent
      );
      transition: 0.5s;
    }

    .product-cart-wrap:hover {
      transform: translateY(-10px) scale(1.02);
      box-shadow: 0 15px 40px rgba(31, 38, 135, 0.2),
        inset 0 0 0 2px rgba(255, 255, 255, 0.6);
    }

    .product-cart-wrap:hover::before {
      left: 100%;
    }

    /* Enhanced Image Container */
    .product-img-action-wrap {
      background: rgba(255, 255, 255, 0.3);
      backdrop-filter: blur(5px);
      border-radius: 20px;
      padding: 10px;
      border: 1px solid rgba(255, 255, 255, 0.2);
    }

    .product-img {
      border-radius: 16px;
      overflow: hidden;
      box-shadow: 0 5px 15px rgba(0, 0, 0, 0.08);
    }

    /* Enhanced Product Content */
    .product-content-wrap {
      background: rgba(255, 255, 255, 0.5);
      backdrop-filter: blur(10px);
      border-radius: 16px;
      padding: 20px;
      margin-top: 15px;
      border: 1px solid rgba(255, 255, 255, 0.2);
    }

    /* Enhanced Price Container */
    .price-container {
      background: rgba(255, 255, 255, 0.4);
      padding: 10px 15px;
      border-radius: 12px;
      backdrop-filter: blur(5px);
      border: 1px solid rgba(255, 255, 255, 0.2);
    }

    /* Enhanced Action Button */
    .product-action-1 {
      background: rgba(255, 255, 255, 0.8);
      backdrop-filter: blur(10px);
      border-top: 1px solid rgba(255, 255, 255, 0.3);
    }

    .action-btn {
      background: linear-gradient(135deg, #006a67, #00857f);
      backdrop-filter: blur(5px);
      border: 1px solid rgba(255, 255, 255, 0.3);
      box-shadow: 0 8px 20px rgba(0, 106, 103, 0.2),
        inset 0 0 0 1px rgba(255, 255, 255, 0.2);
    }

    /* Enhanced Offer Badge */
    .hot {
      background: linear-gradient(135deg, #ff4757, #ff6b81);
      backdrop-filter: blur(5px);
      border: 1px solid rgba(255, 255, 255, 0.3);
      box-shadow: 0 4px 15px rgba(255, 71, 87, 0.3),
        inset 0 0 0 1px rgba(255, 255, 255, 0.2);
    }

    /* Add a subtle gradient background to the page */
    .main {
      background: linear-gradient(135deg, #f5f7fa, #e3e6e8);
      min-height: 100vh;
    }

    /* Enhanced hover effects */
    .product-category a:hover {
      text-shadow: 0 0 10px rgba(0, 106, 103, 0.3);
    }

    .action-btn:hover {
      transform: translateY(-3px) rotate(360deg);
      box-shadow: 0 12px 25px rgba(0, 106, 103, 0.3),
        inset 0 0 0 2px rgba(255, 255, 255, 0.4);
    }

    /* Shimmer effect on hover */
    @keyframes shimmer {
      0% {
        background-position: -100% 0;
      }
      100% {
        background-position: 100% 0;
      }
    }

    .product-cart-wrap:hover .product-content-wrap {
      background: linear-gradient(
        90deg,
        rgba(255, 255, 255, 0.5),
        rgba(255, 255, 255, 0.8),
        rgba(255, 255, 255, 0.5)
      );
      background-size: 200% 100%;
      animation: shimmer 2s infinite;
    }

    /* Responsive styles for hero slider */
    .hero-slider-1 {
      position: relative;
      overflow: hidden;
    }

    .single-hero-slider {
      padding: 2rem 0;
    }

    .slider-animated-1 {
      display: flex;
      align-items: center;
    }

    .hero-slider-content-2 {
      padding: 0 1rem;
    }

    .hero-slider-content-2 h4 {
      font-size: 1.2rem;
      margin-bottom: 1rem;
      color: #ff6b6b;
    }

    .hero-slider-content-2 h2 {
      font-size: 2.5rem;
      margin-bottom: 1rem;
      line-height: 1.2;
    }

    .hero-slider-content-2 h1 {
      font-size: 3rem;
      margin-bottom: 1rem;
      color: #006A67;
    }

    .hero-slider-content-2 p {
      font-size: 1.1rem;
      margin-bottom: 1.5rem;
    }

    .single-slider-img img {
      max-width: 100%;
      height: auto;
      border-radius: 20px;
      transition: transform 0.3s ease;
    }

    @media (max-width: 992px) {
      .slider-animated-1 {
        flex-direction: column;
      }

      .hero-slider-content-2 {
        text-align: center;
        margin-bottom: 2rem;
        order: 1;
      }
      .single-slider-img {
        order: 2;
        margin-top: 1rem;
      }

      .hero-slider-content-2 h2 {
        font-size: 2rem;
      }

      .hero-slider-content-2 h1 {
        font-size: 2.2rem;
      }

      .hero-slider-content-2 p {
        font-size: 1rem;
        padding: 0 1rem;
      }

      .col-lg-5, .col-lg-7 {
        width: 100%;
        max-width: 100%;
        flex: 0 0 100%;
      }
    }

    @media (max-width: 768px) {
      .single-hero-slider {
        padding: 1.5rem 0;
      }

      .hero-slider-content-2 h4 {
        font-size: 1rem;
      }

      .hero-slider-content-2 h2 {
        font-size: 1.8rem;
      }

      .hero-slider-content-2 h1 {
        font-size: 2rem;
      }

      .hero-slider-content-2 p {
        font-size: 0.9rem;
        padding: 0 0.5rem;
    }

      .single-slider-img img {
        border-radius: 15px;
        max-width: 90%;
        margin: 0 auto;
        display: block;
      }
    }

    @media (max-width: 576px) {
      .single-hero-slider {
        padding: 1rem 0;
      }

      .hero-slider-content-2 h2 {
        font-size: 1.5rem;
    }

    .hero-slider-content-2 {
      padding: 2rem;
    }

      .hero-slider-content-2 p {
        font-size: 0.85rem;
        margin-bottom: 1rem;
      }

      .btn-brush {
        padding: 0.5rem 1.5rem;
        font-size: 0.9rem;
      }
    }
  </style>

  <style>
    .hero-section {
      position: relative;
      width: 100%;
      height: 100vh;
      background: url('https://static.nike.com/a/images/f_auto/dpr_1.3,cs_srgb/h_1719,c_limit/b8bc9548-a1e8-4f52-bfdd-e6d0ca90f68c/nike-just-do-it.jpg') center center/cover no-repeat;
      overflow: hidden;
    }

    .hero-overlay {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: linear-gradient(to right, rgba(0, 0, 0, 0.7) 0%, rgba(0, 0, 0, 0.2) 100%);
      z-index: 1;
    }

    .hero-content {
      position: absolute;
      z-index: 2;
      top: 50%;
      left: 8%;
      transform: translateY(-50%);
      width: 90%;
      max-width: 650px;
      color: white;
    }

    .hero-title {
      font-size: clamp(3.5rem, 10vw, 6.5rem);
      font-weight: 900;
      line-height: 0.9;
      margin-bottom: 1.5rem;
      text-transform: uppercase;
      letter-spacing: -2px;
      opacity: 0;
      transform: translateY(30px);
      animation: fadeInUp 0.8s ease-out forwards;
    }

    .hero-subtitle {
      font-size: clamp(1.1rem, 3vw, 1.4rem);
      margin-bottom: 2.5rem;
      opacity: 0;
      transform: translateY(30px);
      animation: fadeInUp 0.8s ease-out 0.3s forwards;
      max-width: 500px;
      line-height: 1.6;
      font-weight: 400;
    }

    .hero-cta {
      display: inline-block;
      padding: 18px 40px;
      background: white;
      color: black;
      text-decoration: none;
      border-radius: 50px;
      font-size: 1.1rem;
      font-weight: 700;
      text-transform: uppercase;
      letter-spacing: 1px;
      transition: all 0.3s ease;
      opacity: 0;
      transform: translateY(30px);
      animation: fadeInUp 0.8s ease-out 0.6s forwards;
    }

    .hero-cta:hover {
      background: #f0f0f0;
      transform: translateY(-2px);
    }

    @keyframes fadeInUp {
      from {
        opacity: 0;
        transform: translateY(30px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    @media (max-width: 768px) {
      .hero-section {
        height: 90vh;
      }
      
      .hero-content {
        left: 5%;
        width: 90%;
      }
      
      .hero-title {
        font-size: clamp(2.5rem, 8vw, 4rem);
      }
      
      .hero-subtitle {
        font-size: 1rem;
      }
      
      .hero-cta {
        padding: 15px 35px;
        font-size: 1rem;
      }
    }
  </style>

  <div class="hero-section">
    <div class="hero-overlay"></div>
    <div class="hero-content">
      <h1 class="hero-title text-white">Break Your<br>Limits</h1>
      <p class="hero-subtitle text-warning" >Push boundaries with our latest collection of performance footwear. Engineered for those who demand greatness.</p>
      <a href="/shop" class="hero-cta">Shop Collection</a>
    </div>
  </div>

  <section
    class="product-tabs section-padding position-relative wow fadeIn animated"
  >
    <div class="bg-square"></div>
    <div class="container">
 
      <div class="container">
        <div class="d-flex justify-content-between align-items-center">
          <h2 class="text-xl font-bold mb-4">Featured Brands</h2>
        </div>

        <!-- Flex container for logos -->
        <div class="d-flex justify-content-between align-items-center">
          <!-- Adidas -->
          <div class="bg-light rounded-circle p-3">
            <img
              alt="Adidas logo"
              class="w- h-auto"
              src="https://upload.wikimedia.org/wikipedia/commons/2/20/Adidas_Logo.svg"
              width="64"
              height="64"
            />
          </div>

          <!-- Nike -->
          <div class="bg-light rounded-circle p-3">
            <img
              alt="Nike logo"
              class="w-h-auto"
              src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTcdb44IezbCN13vEU7fG3sx7G-viDk5t1CUQ&s"
              width="64"
              height="64"
            />
          </div>

          <!-- Jordan -->
          <div class="bg-light rounded-circle p-3">
            <img
              alt="Jordan logo"
              class="w h-auto"
              src="https://i.pinimg.com/736x/98/e5/a4/98e5a4811e32177795897d60231a016f.jpg"
              width="64"
              height="64"
            />
          </div>

          <!-- New Balance -->
          <div class="bg-light rounded-circle p-3">
            <img
              alt="New Balance logo"
              class="w h-auto"
              src="https://logowik.com/content/uploads/images/new-balance.jpg"
              width="79"
              height="66"
            />
          </div>
        </div>
      </div>


      <div class="row product-grid-4">
        <% ProductData.forEach(product => { %>
        <div class="col-lg-3 col-md-4 col-12 col-sm-6 mt-5">
          <div class="product-cart-wrap mb-30">
            <div class="product-img-action-wrap">
              <div class="product-img product-img-zoom">
                <a href="/ProducDetial/<%= product._id %>">
                  <img
                    class="default-img"
                    src="/uploads/re-image/<%= product.images[0] %>"
                    alt="<%= product.name %>"
                  />
                  <img
                    class="hover-img"
                    src="/uploads/re-image/<%= product.images[1] %>"
                    alt="<%= product.name %>"
                  />
                </a>
              </div>
              <% if (product.offer) { %>
              <div class="product-badges">
                <span class="hot">
                  <% if (product.offer.type === 'percentage') { %> <%=
                  product.offer.value %>% OFF <% } else if (product.offer.type
                  === 'flat') { %> ₹<%= product.offer.value %> OFF <% } %>
                </span>
              </div>
              <% } %>
            </div>
            <div class="product-content-wrap">
              <div class="product-category">
                <a href="/category/<%= product.category._id %>">
                  <%= product.category.name %>
                </a>
                <h2>
                  <a href="/ProducDetial/<%= product._id %>">
                    <%= product.productName %>
                  </a>
                </h2>
              </div>
              <div class="price-container">
                <% if (product.offer) { %> <% if (product.salePrice) { %>
                <span class="sale-price"
                  >₹<%= (product.salePrice || 0).toFixed(2) %></span
                >
                <% } %>
                <span class="regular-price"
                  >₹<%= (product.regularPrice || 0).toFixed(2) %></span
                >
                <% } else { %>
                <span class="sale-price"
                  >₹<%= (product.regularPrice || 0).toFixed(2) %></span
                >
                <% } %>
              </div>
              <div class="product-action-1">
                <a
                  aria-label="Add To Cart"
                  class="action-btn"
                  href="/add-to-cart/<%= product._id %>"
                >
                  <i class="fi-rs-shopping-bag-add"></i>
                </a>
              </div>
            </div>
          </div>
        </div>
        <% }) %>
      </div>
      
    

    
    </div>
 

  <script src="/public/public/evara-frontend/assets/js/zoom.js"></script>
  <%-include('../../views/partial/user/footer')%>
</main>