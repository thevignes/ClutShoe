<%-include('../../views/partial/user/header',{user:user})%>
<html>

<head>
    <title>Manage Addresses</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">

</head>

<body>
    <div class="sidebar">
        <div class="profile-pic"></div>
        <div class="username">
            <p class="text-white"><%=addresses.Firstname %></p>
        </div>
        <div class="menu">
            <a href="#" class="menu-item">
                <i class="fas fa-user"></i> Account Overview
            </a>
            <a href="#" class="menu-item">
                <i class="fas fa-box"></i> My Orders
            </a>
            <a href="#" class="menu-item active">
                <i class="fas fa-address-book"></i> Manage Addresses
            </a>
            <a href="#" class="menu-item">
                <i class="fas fa-wallet"></i> Wallet
            </a>
        </div>
        <button class="logout-btn">LOGOUT</button>
    </div>

    <div class="content">
        <div class="form-container">
            <h2>Edit Address</h2>
            <div class="form-group">
                <label>Firstname</label>
                <input type="text" name="firstname" value="<%= addresses.Firstname %>">
            </div>
            <div class="form-group">
                <label>Last Name</label>
                <input type="text" name="lastname" value="<%= addresses.Lastname %>">
            </div>
            <div class="form-group">
                <label>Address</label>
                <input type="text" name="address" value="<%= addresses.address %>">
            </div>
            <div class="form-group">
                <label>City</label>
                <input type="text" name="city" value="<%= addresses.city %>">
            </div>
            <div class="form-group">
                <label>State</label>
                <input type="text" name="state" value="<%= addresses.state %>">
            </div>
            <div class="form-group">
                <label>Country</label>
                <input type="text" name="country" value="<%= addresses.country %>">
            </div>
            <div class="form-group">
                <label>Pin Code</label>
                <input type="text" name="pin" value="<%= addresses.pin %>">
            </div>
            <div class="form-actions">
                <form action="/edit-address/<%= addresses._id %>" method="post"> 
                    <button type="submit" class="save-btn">Save Changes</button>
                </form>
            </div>
            
        </div>
    </div>

</body>
</html>


<%-include('../../views/partial/user/footer')%>