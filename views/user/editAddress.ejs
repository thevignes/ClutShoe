<%-include('../../views/partial/user/header',{user:user})%>
<html>

<head>
    <title>Manage Addresses</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f5f5f5;
            margin: 0;
            padding: 0;
            display: flex;
            height: 100vh;
            flex-direction: column;
        }
        .sidebar {
            width: 250px;
            background-color: #fff;
            box-shadow: 2px 0 5px rgba(0,0,0,0.1);
            padding: 20px;
            display: flex;
            flex-direction: column;
            align-items: center;
        }
        .profile-pic {
            width: 100px;
            height: 100px;
            background-color: #f0f0f0;
            border-radius: 50%;
            margin-bottom: 10px;
        }
        .username {
            background-color: #6a0dad;
            color: #fff;
            padding: 10px 20px;
            border-radius: 20px;
            margin-bottom: 20px;
            text-align: center;
        }
        .menu {
            width: 100%;
        }
        .menu-item {
            display: flex;
            align-items: center;
            padding: 10px 20px;
            color: #333;
            text-decoration: none;
            margin-bottom: 10px;
            border-radius: 5px;
        }
        .menu-item:hover, .menu-item.active {
            background-color: #f0f0f0;
        }
        .menu-item i {
            margin-right: 10px;
        }
        .logout-btn {
            margin-top: auto;
            background-color: #ff0000;
            color: #fff;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }
        .content {
            flex: 1;
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 20px;
        }
        .form-container {
            background-color: #fff;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
            width: 100%;
            max-width: 600px;
        }
        .form-container h2 {
            color: #ff0000;
            margin-bottom: 20px;
        }
        .form-group {
            display: flex;
            justify-content: space-between;
            margin-bottom: 15px;
            flex-wrap: wrap;
        }
        .form-group label {
            flex: 1;
            margin-right: 10px;
        }
        .form-group input {
            flex: 2;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            background-color: #f5f5f5;
        }
        .form-actions {
            display: flex;
            justify-content: flex-end;
            align-items: center;
        }
        .form-actions button {
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }
        .form-actions .cancel-btn {
            background-color: transparent;
            color: #333;
            margin-right: 10px;
        }
        .form-actions .save-btn {
            background-color: #00ff00;
            color: #fff;
        }

        @media (max-width: 768px) {
            .sidebar {
                width: 100%;
                flex-direction: row;
                justify-content: space-between
              }
            .sidebar {
                flex-direction: column;
                height: auto;
                padding: 10px;
            }
            .menu-item {
                justify-content: center;
                text-align: center;
            }
            .content {
                padding: 10px;
            }
            .form-container {
                padding: 20px;
            }
            .form-group {
                flex-direction: column;
                align-items: stretch;
            }
            .form-group label {
                margin-right: 0;
                margin-bottom: 5px;
            }
            .form-group input {
                width: 100%;
                margin-bottom: 10px;
            }
            .form-actions {
                flex-direction: column;
                align-items: flex-start;
            }
            .form-actions button {
                width: 100%;
                margin-bottom: 10px;
            }
        }
        
        @media (max-width: 480px) {
            .sidebar {
                padding: 5px;
            }
            .username {
                font-size: 14px;
                padding: 8px 16px;
            }
            .profile-pic {
                width: 80px;
                height: 80px;
            }
            .form-container {
                padding: 15px;
            }
            .form-actions button {
                font-size: 14px;
            }
        }
    </style>
</head>
<body>
    <div class="sidebar">
        <div class="profile-pic"></div>
        <div class="username">
            <p class="text-white"><%=user.name%></p>
        </div>
        <div class="menu">
            <a href="#" class="menu-item">
                <i class="fas fa-user"></i> Account Overview
            </a>
            <a href="#" class="menu-item">
                <i class="fas fa-box"></i> My Orders
            </a>
            <a href="#" class="menu-item active">
                <i class="fas fa-address-book"></i> Manage Addresses
            </a>
            <a href="#" class="menu-item">
                <i class="fas fa-wallet"></i> Wallet
            </a>
        </div>
        <button class="logout-btn">LOGOUT</button>
    </div>
    <div class="content">
        <div class="form-container">
            <h2>Edit Address</h2>
            <div class="form-group">
                <label>Firstname </label>
                <input type="text" name="firstname" value="<%= addresses.Firstname %>">
            </div>
            <div class="form-group">
                <label>Last Name</label>
                <input type="text" name="lastname" value="<%= addresses.Lastname %>">
            </div>
            <div class="form-group">
                <label>Address</label>
                <input type="text" name="address" value="<%= addresses.address %>">
            </div>
            <div class="form-group">
                <label>City</label>
                <input type="text" name="city" value="<%= addresses.city %>">
            </div>
            <div class="form-group">
                <label>State</label>
                <input type="text" name="state" value="<%= addresses.state %>">
            </div>
            <div class="form-group">
                <label>Country</label>
                <input type="text" name="country" value="<%= addresses.country %>">
            </div>
            <div class="form-group">
                <label>Pin Code</label>
                <input type="text" name="pin" value="<%= addresses.pin %>">
            </div>
            <button type="submit">Save Changes</button>
            

    </div>
</body>
</html>
