<%- include('../../views/partial/user/header', {user: user}) %>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Wishlist</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet"/>
    <style>
        /* Basic Reset */
        body, html {
            margin: 0;
            padding: 0;
            height: 100%;
            font-family: Arial, sans-serif;
        }
        
        /* Ensure body takes full height */
        body {
            display: flex;
            flex-direction: column;
            min-height: 100%;
            background-color: #fff;
        }

        /* Header and footer styling */
        header {
            background-color: #f8f8f8;
            padding: 10px 0;
            text-align: center;
        }

        footer {
            background-color: #f8f8f8;
            padding: 10px 0;
            text-align: center;
            margin-top: auto; /* Push footer to the bottom */
        }

        .wishlist-container {
            max-width: 1200px;
            margin: 2rem auto;
            padding: 0 1rem;
        }

        .wishlist-header {
            font-size: 2.5rem;
            font-weight: 600;
            color: #2c3e50;
            margin-bottom: 2rem;
            text-align: center;
            position: relative;
            padding-bottom: 1rem;
        }

        .wishlist-header::after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 50%;
            transform: translateX(-50%);
            width: 100px;
            height: 4px;
            background: linear-gradient(90deg, #00878a, #006d6f);
            border-radius: 2px;
        }

        .wishlist-item {
            display: flex;
            align-items: center;
            background: white;
            border-radius: 15px;
            padding: 1.5rem;
            margin-bottom: 1.5rem;
            box-shadow: 0 5px 15px rgba(0,0,0,0.05);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            animation: slideIn 0.5s ease-out forwards;
            opacity: 0;
        }

        @keyframes slideIn {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .wishlist-item:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 25px rgba(0,0,0,0.1);
        }

        .wishlist-item img {
            width: 120px;
            height: 120px;
            object-fit: cover;
            border-radius: 10px;
            margin-right: 2rem;
            transition: transform 0.3s ease;
        }

        .wishlist-item img:hover {
            transform: scale(1.05);
        }

        .wishlist-item-details {
            flex: 1;
        }

        .wishlist-item-title {
            font-size: 1.25rem;
            font-weight: 600;
            color: #2c3e50;
            margin-bottom: 0.5rem;
        }

        .wishlist-item-rating {
            margin-bottom: 0.5rem;
        }

        .wishlist-item-rating i {
            color: #f1c40f;
            margin-left: 0.25rem;
        }

        .wishlist-item-price {
            font-size: 1.5rem;
            font-weight: 600;
            color: #00878a;
            margin-right: 1rem;
        }

        .wishlist-item-original-price {
            text-decoration: line-through;
            color: #95a5a6;
            margin-right: 1rem;
        }

        .wishlist-item-discount {
            background: #e74c3c;
            color: white;
            padding: 0.25rem 0.75rem;
            border-radius: 20px;
            font-size: 0.875rem;
        }

        .wishlist-actions {
            display: flex;
            flex-direction: column;
            gap: 0.8rem;
            margin-left: 2rem;
        }

        .wishlist-actions button {
            min-width: 140px;
            padding: 0.7rem 1.2rem;
            border: none;
            border-radius: 8px;
            font-weight: 500;
            font-size: 0.95rem;
            cursor: pointer;
            transition: all 0.2s ease;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 0.5rem;
            letter-spacing: 0.3px;
        }

        .btn-success {
            background: linear-gradient(135deg, #00878a, #006d6f) !important;
            color: white;
            box-shadow: 0 4px 15px rgba(0, 135, 138, 0.2);
        }

        .btn-success:hover {
            background: linear-gradient(135deg, #006d6f, #005456) !important;
            box-shadow: 0 6px 20px rgba(0, 135, 138, 0.3);
            transform: translateY(-2px);
        }

        .btn-success:active {
            transform: translateY(0);
            box-shadow: 0 2px 10px rgba(0, 135, 138, 0.2);
        }

        button[style*="background-color:red"] {
            background: linear-gradient(135deg, #ff4757, #e0394c) !important;
            color: white;
            box-shadow: 0 4px 15px rgba(224, 57, 76, 0.2);
        }

        button[style*="background-color:red"]:hover {
            background: linear-gradient(135deg, #e0394c, #d63344) !important;
            box-shadow: 0 6px 20px rgba(224, 57, 76, 0.3);
            transform: translateY(-2px);
        }

        button[style*="background-color:red"]:active {
            transform: translateY(0);
            box-shadow: 0 2px 10px rgba(224, 57, 76, 0.2);
        }

        /* Add Font Awesome icons to buttons */
        .btn-success::before {
            content: '\f07a';
            font-family: 'Font Awesome 5 Free';
            font-weight: 900;
            margin-right: 0.5rem;
        }

        button[style*="background-color:red"]::before {
            content: '\f2ed';
            font-family: 'Font Awesome 5 Free';
            font-weight: 900;
            margin-right: 0.5rem;
        }

        @media (max-width: 768px) {
            .wishlist-actions {
                margin: 1.5rem 0 0 0;
                width: 100%;
                flex-direction: row;
                justify-content: center;
                gap: 1rem;
            }

            .wishlist-actions button {
                min-width: 120px;
            }
        }

        .empty-message {
            text-align: center;
            color: #7f8c8d;
            margin: 3rem 0 1rem;
            font-size: 1.5rem;
        }

        .empty-message + span {
            display: block;
            text-align: center;
        }

        .empty-message + span a {
            color: #00878a;
            text-decoration: none;
            font-weight: 500;
            transition: color 0.3s ease;
        }

        .empty-message + span a:hover {
            color: #006d6f;
            text-decoration: underline;
        }

        @media (max-width: 768px) {
            .wishlist-item {
                flex-direction: column;
                text-align: center;
                padding: 1rem;
            }

            .wishlist-item img {
                margin: 0 0 1rem 0;
            }

            .wishlist-actions {
                margin: 1rem 0 0 0;
                width: 100%;
            }

            .wishlist-item-details {
                margin: 1rem 0;
            }
        }
    </style>
</head>
<body>

    <div class="wishlist-container">
        <div class="wishlist-header">
            My Wishlist
        </div>

        <% if (products.length > 0) { %>
            <% products.forEach(product => { %>
                <div class="wishlist-item">
                    <img src="/uploads/re-image/<%= product.images[0] %>" alt="Product Image">
                    <div class="wishlist-item-details">
                        <div class="wishlist-item-title">
                            <%= product.productName %>
                        </div>
                        <div class="wishlist-item-rating">
                            <span style="color: red;">
                                <% if (product.quantity === 0) { %>
                                    Currently unavailable
                                </span>
                                <% } else { %>
                                    <span><%= product.status %></span>
                                    <i class="fas fa-star"></i>
                                <% } %>
                           
                        </div>
                        
                        <div>
                            <span class="wishlist-item-price">
                                ₹<%= product.salePrice %>
                            </span>
                            <span class="wishlist-item-original-price">
                                ₹<%= product.regularPrice %>
                            </span>
                            <span class="wishlist-item-discount">
                                <%= product.discount %> off
                            </span>
                        </div>
             
                    </div>
                    <div class="wishlist-actions">
                        <form class="add-to-cart">
                            <button class="<%= product.quantity !== 0 ? 'btn btn-success mt-2' : 'd-none' %>" type="button" onclick="addToCart('<%= product._id %>')">
                                Add to Cart
                            </button>
                        </form>
                        <form style="display: inline;">
                            <input type="hidden" name="productId" value="<%= product._id %>">
                            <button type="button" onclick="removeFromWishlist('<%= product._id %>')" style="background-color:red;">Remove</button>
                        </form>
                    </div>
                </div>
            <% }); %>
        <% } else { %>
            <h3 class="empty-message"><%= message %></h3>
            <span>
                <a href="/shop">Click here to buy a product</a>
            </span>
        <% } %>
    </div>

    <%- include('../../views/partial/user/footer') %>

</body>
</html>

    
    <script>
        async function addToCart(productId) {
      try {
          const response = await fetch(`http://localhost:3100/add-to-cart?id=${productId}`, {
              method: 'POST', 
              credentials: 'include'
          });

          const data = await response.json();

          if (data.success) {
              // Show success toast notification
              Swal.fire({
                  icon: 'success',
                  title: data.message,
                  toast: true,
                  position: 'top-end',
                  showConfirmButton: false,
                  timer: 3000,
                  timerProgressBar: true,
              });
              // alert('heyyy')
              // Optional delay before redirecting
              // setTimeout(() => {
              //     window.location.href = `/ProductDetail/${productId}`;

              // }, 3000); // Redirect after toast disappears
          } else {
              // Show error toast notification
              Swal.fire({
                  icon: 'error',
                  title: data.message,
                  toast: true,
                  position: 'top-end',
                  showConfirmButton: false,
                  timer: 3000,
                  timerProgressBar: true,
              });
          }
      } catch (error) {
          console.error("Error adding to cart:", error);
          // Show general error toast notification
          Swal.fire({
              icon: 'error',
              title: 'Something went wrong. Please try again.',
              toast: true,
              position: 'top-end',
              showConfirmButton: false,
              timer: 3000,
              timerProgressBar: true,
          });
      }
  }
  </script>
<script>
    function removeFromWishlist(productId) {
        fetch(`/wishlist/remove/${productId} `, {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({ productId })
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                // Show success toast notification
                Swal.fire({
                    icon: 'error',
                    title: data.message || 'Removed from wishlist',
                    toast: true,
                    position: 'top-end',
                    showConfirmButton: false,
                    timer: 3000,
                    timerProgressBar: true,
                    background: 'white', // Green color for success
                    iconColor: 'green',
                });
                
                // Optional: remove item from DOM if successful
                document.getElementById(`wishlist-item-${productId}`).remove();
            } else {
                // Show error toast notification
                Swal.fire({
                    icon: 'success',
                    title: data.message || 'Something went wrong!',
                    toast: true,
                    position: 'top-end',
                    showConfirmButton: false,
                    timer: 3000,
                    timerProgressBar: true,
                    background: 'white', // Red color for error
                    iconColor: 'green'
                });
            }
        })
        .catch(error => {
            console.error('Error:', error);
            // Show general error toast notification
            Swal.fire({
                icon: 'success',
                title: 'removed successfully.',
                toast: true,
                position: 'top-end',
                showConfirmButton: false,
                timer: 3000,
                timerProgressBar: true,
                background: 'white', // Red color for general error
                iconColor: 'green',
            });
        });
    }
</script>





    
    </html>