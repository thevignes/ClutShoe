<%- include('../../views/partial/user/header', {user: user}) %>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Wishlist</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet"/>
    <style>
        /* Basic Reset */
        body, html {
            margin: 0;
            padding: 0;
            height: 100%;
            font-family: Arial, sans-serif;
        }
        
        /* Ensure body takes full height */
        body {
            display: flex;
            flex-direction: column;
            min-height: 100%;
            background-color: #fff;
        }

        /* Header and footer styling */
        header {
            background-color: #f8f8f8;
            padding: 10px 0;
            text-align: center;
        }

        footer {
            background-color: #f8f8f8;
            padding: 10px 0;
            text-align: center;
            margin-top: auto; /* Push footer to the bottom */
        }

        .wishlist-container {
            max-width: 800px;
            margin: 0 auto;
            padding: 20px;
            flex: 1; /* Allow the wishlist container to grow and take up available space */
        }

        .wishlist-header {
            font-size: 24px;
            font-weight: bold;
            margin-bottom: 20px;
        }

        .wishlist-item {
            display: flex;
            align-items: flex-start;
            border-bottom: 1px solid #ddd;
            padding: 20px 0;
        }

        .wishlist-item img {
            width: 100px;
            height: auto;
            margin-right: 20px;
        }

        .wishlist-item-details {
            flex-grow: 1;
        }

        .wishlist-item-title {
            font-size: 16px;
            color: #0073e6;
            margin: 0 0 10px;
        }

        .wishlist-item-rating {
            display: flex;
            align-items: center;
            margin-bottom: 10px;
        }

        .wishlist-item-rating span {
            margin-right: 10px;
            font-size: 14px;
            color: #4caf50;
        }

        .wishlist-item-rating i {
            color: #4caf50;
        }

        .wishlist-item-price {
            font-size: 18px;
            font-weight: bold;
            color: #000;
            margin-right: 10px;
        }

        .wishlist-item-original-price {
            font-size: 14px;
            color: #888;
            text-decoration: line-through;
            margin-right: 10px;
        }

        .wishlist-item-discount {
            font-size: 14px;
            color: #4caf50;
        }

        .wishlist-item-unavailable {
            font-size: 14px;
            color: #d32f2f;
            margin-bottom: 10px;
        }

        .wishlist-item-delete {
            color: #888;
            cursor: pointer;
        }

        .wishlist-actions button {
            background-color: #4caf50;
            color: white;
            padding: 5px 10px;
            border: none;
            cursor: pointer;
            margin-top: 10px;
        }

        .wishlist-actions button.d-none {
            display: none;
        }

        /* Empty message link style */
        .empty-message {
            text-align: center;
            margin: 20px 0;
        }
    </style>
</head>
<body>

    <div class="wishlist-container">
        <div class="wishlist-header">
            My Wishlist
        </div>

        <% if (products.length > 0) { %>
            <% products.forEach(product => { %>
                <div class="wishlist-item">
                    <img src="/uploads/re-image/<%= product.images[0] %>" alt="Product Image">
                    <div class="wishlist-item-details">
                        <div class="wishlist-item-title">
                            <%= product.productName %>
                        </div>
                        <div class="wishlist-item-rating">
                            <span style="color: red;">
                                <% if (product.quantity === 0) { %>
                                    Currently unavailable
                                </span>
                                <% } else { %>
                                    <span><%= product.status %></span>
                                    <i class="fas fa-star"></i>
                                <% } %>
                           
                        </div>
                        
                        <div>
                            <span class="wishlist-item-price">
                                ₹<%= product.salePrice %>
                            </span>
                            <span class="wishlist-item-original-price">
                                ₹<%= product.regularPrice %>
                            </span>
                            <span class="wishlist-item-discount">
                                <%= product.discount %> off
                            </span>
                        </div>
             
                    </div>
                    <div class="wishlist-actions">
                        <form class="add-to-cart">
                            <button class="<%= product.quantity !== 0 ? 'btn btn-success mt-2' : 'd-none' %>" type="button" onclick="addToCart('<%= product._id %>')">
                                Add to Cart
                            </button>
                        </form>
                        <form style="display: inline;">
                            <input type="hidden" name="productId" value="<%= product._id %>">
                            <button type="button" onclick="removeFromWishlist('<%= product._id %>')" style="background-color:red;">Remove</button>
                        </form>
                    </div>
                </div>
            <% }); %>
        <% } else { %>
            <h3 class="empty-message"><%= message %></h3>
            <span>
                <a href="/shop">Click here to buy a product</a>
            </span>
        <% } %>
    </div>

    <%- include('../../views/partial/user/footer') %>

</body>
</html>

    
    <script>
        async function addToCart(productId) {
      try {
          const response = await fetch(`http://localhost:3100/add-to-cart?id=${productId}`, {
              method: 'POST', 
              credentials: 'include'
          });

          const data = await response.json();

          if (data.success) {
              // Show success toast notification
              Swal.fire({
                  icon: 'success',
                  title: data.message,
                  toast: true,
                  position: 'top-end',
                  showConfirmButton: false,
                  timer: 3000,
                  timerProgressBar: true,
              });
              // alert('heyyy')
              // Optional delay before redirecting
              // setTimeout(() => {
              //     window.location.href = `/ProductDetail/${productId}`;

              // }, 3000); // Redirect after toast disappears
          } else {
              // Show error toast notification
              Swal.fire({
                  icon: 'error',
                  title: data.message,
                  toast: true,
                  position: 'top-end',
                  showConfirmButton: false,
                  timer: 3000,
                  timerProgressBar: true,
              });
          }
      } catch (error) {
          console.error("Error adding to cart:", error);
          // Show general error toast notification
          Swal.fire({
              icon: 'error',
              title: 'Something went wrong. Please try again.',
              toast: true,
              position: 'top-end',
              showConfirmButton: false,
              timer: 3000,
              timerProgressBar: true,
          });
      }
  }
  </script>
<script>
    function removeFromWishlist(productId) {
        fetch(`/wishlist/remove/${productId} `, {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({ productId })
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                // Show success toast notification
                Swal.fire({
                    icon: 'error',
                    title: data.message || 'Removed from wishlist',
                    toast: true,
                    position: 'top-end',
                    showConfirmButton: false,
                    timer: 3000,
                    timerProgressBar: true,
                    background: 'white', // Green color for success
                    iconColor: 'green',
                });
                
                // Optional: remove item from DOM if successful
                document.getElementById(`wishlist-item-${productId}`).remove();
            } else {
                // Show error toast notification
                Swal.fire({
                    icon: 'success',
                    title: data.message || 'Something went wrong!',
                    toast: true,
                    position: 'top-end',
                    showConfirmButton: false,
                    timer: 3000,
                    timerProgressBar: true,
                    background: 'white', // Red color for error
                    iconColor: 'green'
                });
            }
        })
        .catch(error => {
            console.error('Error:', error);
            // Show general error toast notification
            Swal.fire({
                icon: 'success',
                title: 'removed successfully.',
                toast: true,
                position: 'top-end',
                showConfirmButton: false,
                timer: 3000,
                timerProgressBar: true,
                background: 'white', // Red color for general error
                iconColor: 'green',
            });
        });
    }
</script>





    
    </html>