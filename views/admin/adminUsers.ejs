<%- include("../../views/partial/admin/header", {user: user}) %>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Management</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href=" /evara-backend/assets/css/vendors/pagination.css">
    <style>
        .glass-container {
          background: rgba(255, 255, 255, 0.1);
          backdrop-filter: blur(10px);
          border: 1px solid rgba(255, 255, 255, 0.2);
          box-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.15);
          border-radius: 16px;
          padding: 2rem;
          margin: 0;
        }

        .gradient-bg {
          background: linear-gradient(135deg, rgba(74, 144, 226, 0.05), rgba(103, 178, 111, 0.05));
          min-height: 100vh;
          padding: 2rem;
          margin-left: 260px;
          width: calc(100% - 260px);
        }

        .container {
          max-width: 100%;
          padding: 0 1rem;
        }

        .modern-table {
          background: rgba(255, 255, 255, 0.05);
          backdrop-filter: blur(10px);
          border-radius: 16px;
          overflow: hidden;
          border: none;
        }

        .modern-table th {
          background: rgba(74, 144, 226, 0.1);
          color: #333;
          font-weight: 600;
          padding: 1rem !important;
          border: none;
        }

        .modern-table td {
          padding: 1rem !important;
          border-bottom: 1px solid rgba(255, 255, 255, 0.1);
          vertical-align: middle;
        }

        .modern-btn {
          background: linear-gradient(135deg, #4a90e2, #67b26f) !important;
          border: none !important;
          color: white !important;
          padding: 0.5rem 1.5rem !important;
          border-radius: 8px !important;
          transition: all 0.3s ease !important;
        }

        .modern-btn:hover {
          transform: translateY(-2px);
          box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
        }

        .modern-btn.danger {
          background: linear-gradient(135deg, #ff6b6b, #ee5253) !important;
        }

        .modern-pagination {
          display: flex;
          justify-content: center;
          gap: 0.5rem;
          margin-top: 2rem;
        }

        .modern-pagination .page-link {
          background: rgba(255, 255, 255, 0.1);
          border: 1px solid rgba(255, 255, 255, 0.2);
          color: #333;
          padding: 0.5rem 1rem;
          border-radius: 8px;
          transition: all 0.3s ease;
        }

        .modern-pagination .page-link:hover,
        .modern-pagination .active .page-link {
          background: linear-gradient(135deg, #4a90e2, #67b26f);
          color: white;
          border-color: transparent;
          transform: translateY(-2px);
        }

        .badge {
          padding: 0.5rem 1rem;
          border-radius: 20px;
          font-weight: 500;
        }

        @media (max-width: 991.98px) {
          .gradient-bg {
            margin-left: 0;
            width: 100%;
            padding: 1rem;
          }
        }
    </style>
</head>
<body>
   

    <div class="gradient-bg">
      <div class="container">
        <div class="glass-container">
          <h3 class="mb-4">User Management</h3>

          <div class="table-responsive modern-table">
            <table class="table table-hover">
              <thead>
                <tr>
                  <th>Name</th>
                  <th>Email</th>
                  <th>Status</th>
                  <th>Action</th>
                </tr>
              </thead>
              <tbody>
                <% user.forEach(user => { %>
                  <tr>
                    <td><%= user.name %></td>
                    <td><%= user.email %></td>
                    <td>
                      <% if (!user.IsBlocked) { %>
                        <span class="badge bg-success">Active</span>
                      <% } else { %>
                        <span class="badge bg-secondary">Blocked</span>
                      <% } %>
                    </td>
                    <td>
                      <% if (!user.IsBlocked) { %>
                        <a href="/admin/blockUser?id=<%= user._id %>" onclick="return funBlock(event, this.href)" class="btn modern-btn danger">Block</a>
                      <% } else { %>
                        <a href="/admin/UnblockUser?id=<%= user._id %>" onclick="return fununBlock(event, this.href)" class="btn modern-btn">Unblock</a>
                      <% } %>
                    </td>
                  </tr>
                <% }) %>
              </tbody>
            </table>
          </div>

          <!-- Pagination -->
          <nav aria-label="User table pagination" class="modern-pagination">
            <ul class="pagination">
              <% for (let i = 1; i <= totalPages; i++) { %>
                <li class="page-item <%= currentPage === i ? 'active' : '' %>">
                  <a class="page-link" href="?page=<%= i %>&limit=15&search=<%= searchQuery %>"><%= i %></a>
                </li>
              <% } %>
            </ul>
          </nav>
        </div>
      </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>
<%-include("../../views/partial/admin/footer")%>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>

  function funBlock(event, url) {
        event.preventDefault(); // Prevent the default link action

        Swal.fire({
            title: "Are you sure?",
            text: "You block this user!",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: "#3085d6",
            cancelButtonColor: "#d33",
            confirmButtonText: "Yes, block!"
        }).then((result) => {
            if (result.isConfirmed) {
　　 　 　 　
                window.location.href = url;
　 　 　 　 　
                Swal.fire({
                    title: "Deleted!",
                    text: "Your file has been deleted.",
                    icon: "success"
                });
            }
        });
    }

    function fununBlock(event, url) {
        event.preventDefault(); // Prevent the default link action

        Swal.fire({
            title: "Are you sure?",
            text: "You want unlock this user ?",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: "#3085d6",
            cancelButtonColor: "#d33",
            confirmButtonText: "yes unblock"
        }).then((result) => {
            if (result.isConfirmed) {
                // Redirect to the blocking URL only if confirmed
                Swal.fire({
                title: "Listed!",
                text: "This User is unblocked.",
                icon: "success",
                timer: 1500, 
                showConfirmButton: false
            }).then(() => {
                // Redirect after success message is shown
                window.location.href = url;
            });
            }
        });
    }
</script>