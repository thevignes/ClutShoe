    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const chartData = <%- JSON.stringify(chartData) %>;
            let chart = null;

            function formatCurrency(value) {
                return new Intl.NumberFormat('en-IN', {
                    style: 'currency',
                    currency: 'INR',
                    maximumFractionDigits: 0
                }).format(value);
            }

            function getLabels(data, period) {
                const months = ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul', 'Aug', 'Sep', 'Oct', 'Nov', 'Dec'];
                
                switch(period) {
                    case 'weekly':
                        return data.map(item => `Week ${item._id.week}, ${item._id.year}`);
                    case 'monthly':
                        return data.map(item => `${months[item._id.month - 1]} ${item._id.year}`);
                    case 'yearly':
                        return data.map(item => item._id.year.toString());
                    default:
                        return [];
                }
            }

            function updateChart(period) {
                if (chart) {
                    chart.destroy();
                }

                const data = chartData[period];
                const ctx = document.getElementById('revenueChart').getContext('2d');
                const labels = getLabels(data, period);
                const revenues = data.map(item => item.totalAmount || 0);
                const orders = data.map(item => item.count);

                chart = new Chart(ctx, {
                    type: 'bar',
                    data: {
                        labels: labels,
                        datasets: [
                            {
                                label: 'Orders',
                                data: orders,
                                backgroundColor: 'rgba(54, 162, 235, 0.5)',
                                borderColor: 'rgba(54, 162, 235, 1)',
                                borderWidth: 1,
                                yAxisID: 'y-orders'
                            },
                            {
                                label: 'Revenue',
                                data: revenues,
                                type: 'line',
                                borderColor: 'rgba(75, 192, 192, 1)',
                                backgroundColor: 'rgba(75, 192, 192, 0.5)',
                                yAxisID: 'y-revenue',
                                fill: false
                            }
                        ]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        interaction: {
                            mode: 'index',
                            intersect: false
                        },
                        scales: {
                            'y-orders': {
                                type: 'linear',
                                position: 'left',
                                title: {
                                    display: true,
                                    text: 'Number of Orders'
                                },
                                ticks: {
                                    beginAtZero: true
                                }
                            },
                            'y-revenue': {
                                type: 'linear',
                                position: 'right',
                                title: {
                                    display: true,
                                    text: 'Revenue (₹)'
                                },
                                ticks: {
                                    callback: value => formatCurrency(value),
                                    beginAtZero: true
                                }
                            }
                        },
                        plugins: {
                            tooltip: {
                                callbacks: {
                                    label: function(context) {
                                        const label = context.dataset.label;
                                        const value = context.raw;
                                        return label === 'Revenue' ? 
                                            `${label}: ${formatCurrency(value)}` :
                                            `${label}: ${value}`;
                                    }
                                }
                            }
                        }
                    }
                });
            }

          
            updateChart('monthly');

       
            document.getElementById('periodSelect').addEventListener('change', e => {
                updateChart(e.target.value);
            });
        });
    </script>

