<%- include("../../views/partial/admin/header") %>
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Sales Report</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
  <style>
    .main-content {
        margin-left: 260px;
        width: calc(100% - 260px);
        min-height: 100vh;
        padding: 2rem;
        background: linear-gradient(135deg, rgba(74, 144, 226, 0.05), rgba(103, 178, 111, 0.05));
    }

    .content-container {
        max-width: 100%;
        padding: 0;
    }

    .page-title {
        color: #333;
        font-weight: 600;
        margin-bottom: 2rem;
        position: relative;
        padding-bottom: 1rem;
    }

    .page-title:after {
        content: '';
        position: absolute;
        bottom: 0;
        left: 50%;
        transform: translateX(-50%);
        width: 100px;
        height: 3px;
        background: linear-gradient(90deg, #4a90e2, #67b26f);
        border-radius: 2px;
    }

    .filter-section {
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.2);
        box-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.15);
        border-radius: 16px;
        margin-bottom: 2rem;
    }

    .form-control, .form-select {
        background: rgba(255, 255, 255, 0.1);
        border: 1px solid rgba(255, 255, 255, 0.2);
        border-radius: 8px;
        padding: 0.8rem;
        color: #333;
    }

    .form-control:focus, .form-select:focus {
        box-shadow: 0 0 0 3px rgba(74, 144, 226, 0.2);
        border-color: #4a90e2;
        background: rgba(255, 255, 255, 0.2);
    }

    .summary-card {
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.2);
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        border-radius: 12px;
        padding: 1.5rem;
        margin-bottom: 1rem;
        transition: transform 0.3s ease;
    }

    .summary-card h5 {
        color: #333;
        font-size: 1.1rem;
        margin-bottom: 1rem;
    }

    .summary-card p {
        color: #4a90e2;
        font-size: 1.5rem;
        margin: 0;
        font-weight: 600;
    }

    .order-card {
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.2);
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        border-radius: 12px;
        padding: 1.5rem;
        margin-bottom: 1.5rem;
        transition: transform 0.3s ease;
    }

    .order-card:hover {
        transform: translateY(-5px);
    }

    .badge-status {
        padding: 0.5rem 1rem;
        border-radius: 20px;
        font-weight: 500;
        color: white;
    }

    .product-list {
        list-style: none;
        padding: 0;
        margin: 1rem 0;
    }

    .product-item {
        background: rgba(255, 255, 255, 0.05);
        border-radius: 8px;
        padding: 1rem;
        margin-bottom: 0.5rem;
        transition: all 0.3s ease;
    }

    .product-item:hover {
        background: rgba(255, 255, 255, 0.1);
        transform: translateX(5px);
    }

    .btn {
        border-radius: 8px;
        padding: 0.7rem 1.5rem;
        transition: all 0.3s ease;
        border: none;
        font-weight: 500;
    }

    .btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    }

    .btn-primary {
        background: linear-gradient(135deg, #4a90e2, #67b26f);
    }

    .btn-success {
        background: linear-gradient(135deg, #2ecc71, #27ae60);
    }

    @media (max-width: 991.98px) {
        .main-content {
            margin-left: 0;
            width: 100%;
            padding: 1rem;
        }

        .content-container {
            padding: 0 1rem;
        }

        .summary-card {
            margin-bottom: 1rem;
        }

        .filter-section {
            padding: 1rem;
        }
    }

    .custom-date-range {
        display: none;
        transition: all 0.3s ease;
    }

    .custom-date-range.show {
        display: block;
    }
  </style>
</head>
<body>

<div class="main-content">
    <div class="content-container">
        <h1 class="page-title text-center">Sales Report</h1>

  <!-- Filter Section -->
  <div class="filter-section mb-4 p-4">
    <form action="/admin/sales-report" method="GET" class="row g-4 align-items-end">
      <div class="col-md-3">
        <label for="filter" class="form-label">Filter by</label>
        <select name="filter" id="filter" class="form-select" onchange="toggleCustomDateRange()">
          <option value="daily" <%= filter === 'daily' ? 'selected' : '' %>>Daily</option>
          <option value="weekly" <%= filter === 'weekly' ? 'selected' : '' %>>Weekly</option>
          <option value="monthly" <%= filter === 'monthly' ? 'selected' : '' %>>Monthly</option>
          <option value="custom" <%= filter === 'custom' ? 'selected' : '' %>>Custom Range</option>
        </select>
      </div>
      <div class="col-md-3 custom-date-range <%= filter === 'custom' ? 'show' : '' %>">
        <label for="startDate" class="form-label">Start Date</label>
        <input type="date" name="startDate" id="startDate" class="form-control" value="<%= startDate || '' %>">
      </div>
      <div class="col-md-3 custom-date-range <%= filter === 'custom' ? 'show' : '' %>">
        <label for="endDate" class="form-label">End Date</label>
        <input type="date" name="endDate" id="endDate" class="form-control" value="<%= endDate || '' %>">
      </div>
      <div class="col-md-3">
        <button type="submit" class="btn btn-primary w-100">
          <i class="fas fa-chart-line me-2"></i>Generate Report
        </button>
      </div>
    </form>
    <!-- Download PDF Button -->
    <div class="text-end mt-3">
      <button class="btn btn-success" onclick="downloadPDF()">
        <i class="fas fa-download me-2"></i>Download PDF
      </button>
    </div>
  </div>

  <!-- Display Sales Data -->
  <div class="sales-data" id="salesReportContent">
    <h2 class="mb-4">Sales Summary</h2>
    
    <!-- Summary Cards -->
    <div class="row text-center mb-4">
      <div class="col-md-4">
        <div class="summary-card">
          <h5>Overall Sales Count</h5>
          <p><%= overallSalesCount || 0 %></p>
        </div>
      </div>
      <div class="col-md-4">
        <div class="summary-card">
          <h5>Overall Order Amount</h5>
          <p>₹<%= overallOrderAmount ? overallOrderAmount.toFixed(2) : '0.00' %></p>
        </div>
      </div>
      <div class="col-md-4">
        <div class="summary-card">
          <h5>Overall Discount</h5>
          <p>₹<%= overallDiscount ? overallDiscount.toFixed(2) : '0.00' %></p>
        </div>
      </div>
    </div>

    <!-- Orders Section -->
    <% if (orders && orders.length > 0) { %>
      <% orders.forEach(order => { %>
        <div class="order-card">
          <div class="header d-flex justify-content-between align-items-center mb-3">
            <h5 class="m-0">Order ID: <%= order.oid %></h5>
            <span class="badge-status bg-<%= order.paymentStatus === 'paid' ? 'success' : 'secondary' %>">
              <%= order.paymentMethod %>
            </span>
          </div>
          <div class="order-details mb-3">
            <div class="row">
              <div class="col-md-4">
                <strong>Date:</strong> <%= new Date(order.orderDate).toLocaleDateString() %>
              </div>
              <div class="col-md-4">
                <strong>Total Amount:</strong> ₹<%= order.total ? order.total.toFixed(2) : '0.00' %>
              </div>
              <div class="col-md-4">
                <strong>Status:</strong> <%= order.status %>
              </div>
            </div>
          </div>

          <% if (cart && cart.length > 0) { %>
            <% cart.forEach(carts => { %>
              <div class="discount-info mb-3">
                <strong>Discount Amount:</strong> ₹<%= carts.discountAmount %>
              </div>
            <% }); %>
          <% } %>

          <h6 class="mb-3">Products:</h6>
          <ul class="product-list">
            <% order.products.forEach(item => { %>
              <li class="product-item d-flex justify-content-between align-items-center">
                <div>
                  <% if (item.productId) { %>
                    <strong><%= item.productId.productName || 'Unknown' %></strong><br>
                    <small>Quantity: <%= item.quantity || 'N/A' %></small>
                  <% } else { %>
                    <p>Product details are not available.</p>
                  <% } %>
                </div>
                <div>
                  <strong>₹<%= item.subtotal ? item.subtotal.toFixed(2) : '0.00' %></strong>
                </div>
              </li>
            <% }); %>
          </ul>
        </div>
      <% }); %>
    <% } else { %>
      <div class="text-center p-5">
        <h4>No orders found for the selected range.</h4>
      </div>
    <% } %>
  </div>
</div>

<script>
  function toggleCustomDateRange() {
    const filter = document.getElementById('filter').value;
    const dateRanges = document.querySelectorAll('.custom-date-range');
    
    dateRanges.forEach(range => {
      if (filter === 'custom') {
        range.classList.add('show');
      } else {
        range.classList.remove('show');
      }
    });
  }
</script>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/html2pdf.js/0.9.2/html2pdf.bundle.min.js"></script>
<script>
  function downloadPDF() {
    const element = document.getElementById('salesReportContent');
    html2pdf().from(element).set({
      margin: 1,
      filename: 'Sales_Report.pdf',
      image: { type: 'jpeg', quality: 0.98 },
      html2canvas: { scale: 2 },
      jsPDF: { unit: 'in', format: 'a4', orientation: 'portrait' }
    }).save();
  }
</script>
<%- include("../../views/partial/admin/footer") %>
</body>
</html>
