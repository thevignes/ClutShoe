<%- include("../../views/partial/admin/header") %>
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Sales Report</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
  <style>
    .summary-card {
      background-color: #9FE2BF;
      border-radius: 8px;
      padding: 20px;
      color: #333;
      box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
      margin-bottom: 20px;
    }
    .order-card {
      background-color: #CCCCFF;
      border-radius: 8px;
      padding: 15px;
      color: #333;
      box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
      margin-bottom: 20px;
    }
    .filter-section {
      background-color: #f8f9fa;
      padding: 15px;
      border-radius: 8px;
      margin-bottom: 20px;
    }
    .custom-date-range {
      display: none;
    }
    .badge-status {
      padding: 5px 10px;
      border-radius: 5px;
    }
    @media (max-width: 768px) {
      .summary-card {
        margin-bottom: 10px;
        padding: 10px;
      }
      .filter-section {
        padding: 10px;
      }
    }
  </style>
</head>
<body>

<div class="container my-5">
  <h1 class="mb-4 text-center">Sales Report</h1>

  <!-- Filter Section -->
  <div class="filter-section mb-4 p-3">
    <form action="/admin/sales-report" method="GET" class="row g-3 align-items-end">
      <div class="col-md-3">
        <label for="filter" class="form-label">Filter by</label>
        <select name="filter" id="filter" class="form-select" onchange="toggleCustomDateRange()">
          <option value="daily" <%= filter === 'daily' ? 'selected' : '' %>>Daily</option>
          <option value="weekly" <%= filter === 'weekly' ? 'selected' : '' %>>Weekly</option>
          <option value="monthly" <%= filter === 'monthly' ? 'selected' : '' %>>Monthly</option>
          <option value="custom"  <%= filter === 'custom' ? 'selected' : '' %>>Custom Range</option>
        </select>
      </div>
      <div class="col-md-3 custom-date-range">
        <label for="startDate" class="form-label">Start Date</label>
        <input type="date" name="startDate" id="startDate" class="form-control" value="<%= startDate || '' %>">
      </div>
      <div class="col-md-3 custom-date-range">
        <label for="endDate" class="form-label">End Date</label>
        <input type="date" name="endDate" id="endDate" class="form-control" value="<%= endDate || '' %>">
      </div>
      <div class="col-md-3">
        <button type="submit" class="btn btn-primary w-100">Generate Report</button>
      </div>
    </form>
  </div>

  <!-- Display Sales Data -->
  <div class="sales-data" id="salesReportContent">
    <h2>Sales Summary</h2>
    <ul>
      <% if (filter === 'daily') { %>
        <li><strong>Today's Sales</strong></li>
      <% } %>
      <% if (filter === 'weekly') { %>
        <li><strong>This Week's Sales</strong></li>
      <% } %>
      <% if (filter === 'monthly') { %>
        <li><strong>This Month's Sales</strong></li>
      <% } %>
      <li><strong>Total Sales:</strong> <%= totalSalesAmount ? totalSalesAmount.toFixed(2) : '0.00' %></li>
    </ul>
 

  <!-- Summary Cards -->
  <div class="row text-center mb-4">
    <div class="col-md-4">
      <div class="summary-card">
        <h5>Overall Sales Count</h5>
        <p><strong><%= overallSalesCount || 0 %></strong></p>
      </div>
    </div>
    <div class="col-md-4">
      <div class="summary-card">
        <h5>Overall Order Amount</h5>
        <p><strong><%= overallOrderAmount ? overallOrderAmount.toFixed(2) : '0.00' %></strong></p>
      </div>
    </div>
    <div class="col-md-4">
      <div class="summary-card">
        <h5>Overall Discount</h5>
        <p><strong><%= overallDiscount ? overallDiscount.toFixed(2) : '0.00' %></strong></p>
      </div>
    </div>
  </div>

  <!-- Download PDF Button -->
  <div class="text-end mb-4">
    <button class="btn btn-success" onclick="downloadPDF()"><i class="fas fa-download"></i> Download PDF</button>
  </div>

  <!-- Orders Section -->
  <% if (orders && orders.length > 0) { %>
    <% orders.forEach(order => { %>
      <div class="order-card">
        <div class="header d-flex justify-content-between">
          <h5>Order ID: <%= order.oid %></h5>
          <span class="badge-status bg-<%= order.paymentStatus === 'paid' ? 'success' : 'secondary' %>"><%= order.paymentMethod %></span>
        </div>
        <p><strong>Total Amount:</strong> <%= order.total ? order.total.toFixed(2) : '0.00' %></p>
        <% if (cart && cart.length > 0) { %>
          <% cart.forEach(carts => { %>
            <p><strong>Discount Amount:</strong> <%= carts.discountAmount  %></p>
            <!-- <p><strong>Coupon Code:</strong> <%= carts.couponCode || 'N/A' %></p> -->
          <% }); %>
        <% } %>
        <h6>Products:</h6>
        <ul class="product-list">
          <% order.products.forEach(item => { %>
            <li class="product-item d-flex justify-content-between">
              <div>
                <% if (item.productId) { %>
                  <strong>Product:</strong> <%= item.productId.productName || 'Unknown' %> <br>
                  <strong>Quantity:</strong> <%= item.quantity || 'N/A' %>
                <% } else { %>
                  <p>Product details are not available.</p>
                <% } %>
              </div>
              <div>
                <strong>Subtotal:</strong> <%= item.subtotal ? item.subtotal.toFixed(2) : '0.00' %>
              </div>
            </li>
            <% }); %>
          </div>
        </ul>
      </div>
    <% }); %>
  <% } else { %>
    <p class="text-center">No orders found for the selected range.</p>
  <% } %>
  
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/html2pdf.js/0.9.2/html2pdf.bundle.min.js"></script>
  <script>
    function downloadPDF() {
      const element = document.getElementById('salesReportContent');
      html2pdf().from(element).set({
        margin: 1,
        filename: 'Sales_Report.pdf',
        image: { type: 'jpeg', quality: 0.98 },
        html2canvas: { scale: 2 },
        jsPDF: { unit: 'in', format: 'a4', orientation: 'portrait' }
      }).save();
    }

    function toggleCustomDateRange() {
      const filter = document.getElementById('filter').value;
      const customDateRange = document.querySelectorAll('.custom-date-range');
      customDateRange.forEach(element => {
        element.style.display = filter === 'custom' ? 'block' : 'none';
      });
    }
    toggleCustomDateRange(); // Set the initial state
  </script>
  <%- include("../../views/partial/admin/footer") %>
</body>
</html>
