<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Product List</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background-color: #f7f9fc;
    }
    .table-container {
      margin-top: 30px;
      padding: 20px;
      background-color: #fff;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      border-radius: 8px;
    }
    .page-header {
      text-align: center;
      margin-bottom: 30px;
      font-size: 28px;
      font-weight: 600;
    }
    .add-product-btn {
      float: right;
      margin-bottom: 20px;
    }
    .btn {
      padding: 5px 10px;
      font-size: 14px;
    }
    .table thead th {
      text-align: center;
    }
    .table tbody td {
      vertical-align: middle;
    }
  </style>
</head>
<body>
  <!-- Header -->
  <%- include("../../views/partial/admin/header") %>

  <!-- Main Content -->
<!-- Main Content -->
<div class="container table-container">
    <form action="/admin/addProduct">
      <button type="submit" class="btn btn-success add-product-btn">Add Product</button>
    </form>
  
    <h2 class="page-header">Product List</h2>
    <% if (products.length > 0) { %>
      <table class="table table-bordered table-hover text-center align-middle">
        <thead class="table-dark">
          <tr>
            <th>Product Name</th>
            <th>Description</th>
            <th>Regular Price</th>
            <th>Sale Price</th>
            <th>Quantity</th>
            <th>Category</th>
            <th>Offer</th>
            <th>Status</th>
            <th>Actions</th>
            <th>Add Offer</th>
            <th>Remove Offer</th>
          </tr>
        </thead>
        <tbody>
          <% products.forEach(product => { %>
            <tr>
              <td><%= product.productName %></td>
              <td><%= product.description %></td>
              <td><%= product.regularPrice %></td>
              <td><%= product.salePrice %></td>
              <td><%= product.quantity %></td>
              <td><%= product.category.name %></td>
              <td>
                <% if (product.offer) { %>
                  <% if (product.offer.type === 'percentage') { %>
                    <%= product.offer.value %>% OFF
                  <% } else if (product.offer.type === 'flat') { %>
                    â‚¹<%= product.offer.value %> OFF
                  <% } %>
                <% } else { %>
                  No Offer
                <% } %>
              </td>
              <td>
                <% if (product.isListed) { %>
                  <span class="badge bg-success">Listed</span>
                <% } else { %>
                  <span class="badge bg-secondary">Unlisted</span>
                <% } %>
              </td>
              <td>
                <a href="/admin/editProduct/<%= product._id %>" class="btn btn-warning btn-sm">Edit</a>
                <% if (product.isListed) { %>
                  <form action="/admin/unListProduct/<%= product._id %>" method="post" style="display: inline;">
                    <button type="submit" class="btn btn-danger btn-sm">Unlist</button>
                  </form>
                <% } else { %>
                  <form action="/admin/listProduct/<%= product._id %>" method="post" style="display: inline;">
                    <button type="submit" class="btn btn-success btn-sm">List</button>
                  </form>
                <% } %>
              </td>
              <td>
                <button type="button" class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#offerModal" data-product-id="<%= product._id %>">
                  Add Offer
                </button>
              </td>
              <td class="text-end">
                <button 
                class="btn btn-danger btn-sm" 
                onclick="removeOffer('<%= product._id %>')">
                Remove Offer
              </button>
              
              
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    <% } else { %>
      <p class="text-center">No products found.</p>
    <% } %>
  </div>
  
  
  <div class="modal fade" id="offerModal" tabindex="-1" aria-labelledby="offerModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="offerModalLabel">Add Offer</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="offerForm" method="POST">
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="offerValue" class="form-label">Offer Value (%)</label>
                        <input type="number" id="offerValue" name="value" class="form-control" required placeholder="Enter discount percentage">
                        <small class="form-text text-muted">Enter the discount percentage value.</small>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-primary" id="submitOffer">Add Offer</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Footer -->
<%- include("../../views/partial/admin/footer") %>

<!-- Bootstrap and SweetAlert2 JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>
  let productId;  // Declare productId in a broader scope

  const offerModal = document.getElementById('offerModal');
  offerModal.addEventListener('show.bs.modal', function (event) {
      const button = event.relatedTarget;
      productId = button.getAttribute('data-product-id'); // Set productId when modal is shown
  });

  document.getElementById('submitOffer').addEventListener('click', async () => {
      const value = document.getElementById('offerValue').value;

      try {
          const response = await fetch(`/admin/addOffer/${productId}`, {  // Use productId here
              method: 'POST',
              headers: { 'Content-Type': 'application/json' },
              body: JSON.stringify({ type: 'percentage', value })
          });

          const result = await response.json();

          if (result.message) {
              Swal.fire({
                  icon: 'success',
                  title: 'Offer Applied!',
                  text: result.message, 
                  toast: true,
                  position: 'top-end',
                  showConfirmButton: false,
                  timer: 2000
              });
              offerModal.querySelector('.btn-close').click()
          } else {
              Swal.fire({
                  icon: 'error',
                  title: 'Error',
                  text: result.message || 'An error occurred while applying the offer.',
                  toast: true,
                  position: 'top-end',
                  showConfirmButton: false,
                  timer: 2000
              });
          }
      } catch (error) {
          console.error(error);
          Swal.fire({
              icon: 'error',
              title: 'Error',
              text: 'An error occurred while applying the offer.',
              toast: true,
              position: 'top-end',
              showConfirmButton: false,
              timer: 2000
          });
      }
  })
  async function removeOffer(productId) {
    try {
        console.log('sathanam kitti', productId
            
        )
        const response = await fetch('/admin/offer-remove', {
            method: 'POST',
            headers: {
                "Content-Type": "application/json",
            },
            body: JSON.stringify({ productId }),
        });

        const result = await response.json();

        if (response.ok) {
            Swal.fire({
                icon: 'success',
                title: 'Offer Removed',
                text: result.message || 'Offer removed successfully.',
                toast: true,
                position: 'top-end',
                showConfirmButton: false,
                timer: 1500,
            });
        } else {
            Swal.fire({
                icon: 'error',
                title: 'Error',
                text: result.message || 'Failed to remove the offer.',
                toast: true,
                position: 'top-end',
                showConfirmButton: false,
                timer: 1500,
            });
        }
    } catch (error) {
        Swal.fire({
            icon: 'error',
            title: 'Error',
            text: 'An error occurred while removing the offer.',
            toast: true,
            position: 'top-end',
            showConfirmButton: false,
            timer: 1500,
        });
    }
}

</script>



</body>
</html> 

  
