<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Product List</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background-color: #f7f9fc;
    }
    .table-container {
      margin-top: 30px;
      padding: 20px;
      background-color: #fff;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      border-radius: 8px;
    }
    .page-header {
      text-align: center;
      margin-bottom: 30px;
      font-size: 28px;
      font-weight: 600;
    }
    .add-product-btn {
      float: right;
      margin-bottom: 20px;
    }
    .btn {
      padding: 5px 10px;
      font-size: 14px;
    }
    .table thead th {
      text-align: center;
    }
    .table tbody td {
      vertical-align: middle;
    }
  </style>
</head>
<body>
  <!-- Header -->
  <%- include("../../views/partial/admin/header") %>

  <!-- Main Content -->
  <div class="container table-container">
    <form action="/admin/addProduct">
      <button type="submit" class="btn btn-success add-product-btn">Add Product</button>
    </form>
    
    <h2 class="page-header">Product List</h2>
    
    <% if (products.length > 0) { %>
    <table class="table table-bordered table-hover text-center align-middle">
      <thead class="table-dark">
        <tr>
          <th>Product Name</th>
          <th>Description</th>
          <th>Regular Price</th>
          <th>Sale Price</th>
          <th>Quantity</th>
          <th>Color</th>
          <th>Category</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% products.forEach(product => { %>
        <tr>
          <td><%= product.productName %></td>
          <td><%= product.description %></td>
          <td><%= product.regularPrice %></td>
          <td><%= product.salePrice %></td>
          <td><%= product.quantity %></td>
          <td><%= product.color %></td>
          <td><%= product.category.name %></td>
          
          <td>  
            <a href="/admin/editProduct/<%= product._id %>" class="btn btn-warning btn-sm">Edit</a>
            <a href="/admin/deleteProduct/<%= product._id %>" class="btn btn-danger btn-sm">Delete</a>
          </td>
        </tr>
        <% }) %>
      </tbody>
    </table>
    <% } else { %>
    <p class="text-center">No products found.</p>
    <% } %>
  </div>

  <!-- Footer -->
  <!-- <%- include("../../views/partial/admin/footer") %> -->

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>

  
<%- include("../../views/partial/admin/footer") %>
